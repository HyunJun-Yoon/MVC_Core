@model AspNetBlog.MVC6.Models.User

<h2>Sign Up</h2>

<form class="form-horizontal" method="post" asp-controller="Account" asp-action="SignUp">
    <div class="form-group">
        <label>User ID</label>
        <input type="text" class="form-control" asp-for="UserId" placholder="Enter User ID" />
        <span class="text-danger" asp-validation-for="UserId"></span>
    </div>

    <div class="form-group">
        <label>Password</label>
        <input type="password" class="form-control" asp-for="UserPassword" placholder="Enter Password" />
        <span class="text-danger" asp-validation-for="UserPassword"></span>
    </div>

    <div class="form-group">
        <label>User Name</label>
        <input type="text" class="form-control" asp-for="UserName" placholder="Enter User Name" />
        <span class="text-danger" asp-validation-for="UserName"></span>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Sign Up</button>
        <a href="#" class="btn btn-warning">Cancel</a>
    </div>
</form>